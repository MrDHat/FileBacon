<% if current_user %>
  <h2>Latest Documents</h2>
  <table style="width: 100%">
    <thead>
      <tr>
        <th>Url</th>
      </tr>
    </thead>

    <tbody>
    <% @docs.each do |doc| %>
      <tr>
        <td><%= link_to doc.title, doc.url %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
 
 <%= link_to 'New Doc', new_doc_path, :class => "button secondary" %>

<% else %>
  <div class="panel">
    <h1>Share your files!</h1>
    <p>A simple app to track and share your files with others.</p>
    <%= link_to "Get started today!", new_user_registration_path, :class => "button button-large" %>
  </div>
<% end %>